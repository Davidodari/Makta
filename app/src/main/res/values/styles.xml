<resources>

    <!-- Base application theme. -->
    <style name="Theme.MaktaApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_500_dark</item>
        <item name="colorSecondary">@color/amber_a400</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Profile Card View Text-->
    <style name="Theme.MaktaApp.ProfileText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--Edit Text Style-->
    <style name="Theme.MaktaApp.EditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:inputType">text</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="Theme.MaktaApp.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@color/purple_500</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
